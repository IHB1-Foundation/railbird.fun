# PlayerCo Environment Configuration
# Copy this file to .env and fill in the values

# ============================================
# Chain Environment
# ============================================
# Options: local | testnet | mainnet
CHAIN_ENV=testnet

# RPC endpoint URL
RPC_URL=https://testnet-rpc.monad.xyz

# ============================================
# Core Protocol Contract Addresses
# ============================================
POKER_TABLE_ADDRESS=0x0000000000000000000000000000000000000000
PLAYER_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
PLAYER_VAULT_ADDRESS=0x0000000000000000000000000000000000000000
VRF_ADAPTER_ADDRESS=0x0000000000000000000000000000000000000000

# ============================================
# nad.fun Integration Addresses
# ============================================
# Lens contract for querying token stage and routing
NADFUN_LENS_ADDRESS=0x0000000000000000000000000000000000000000

# Router for bonding curve trades
NADFUN_BONDING_ROUTER_ADDRESS=0x0000000000000000000000000000000000000000

# Router for graduated DEX trades
NADFUN_DEX_ROUTER_ADDRESS=0x0000000000000000000000000000000000000000

# ============================================
# Token Addresses
# ============================================
# Wrapped MON token
WMON_ADDRESS=0x0000000000000000000000000000000000000000

# ============================================
# Service-specific Configuration (optional)
# ============================================

# Indexer Database
# DATABASE_URL=postgresql://user:pass@localhost:5432/playerco

# OwnerView Service
# DEALER_PRIVATE_KEY=0x...

# Bots
# AGENT_OPERATOR_PRIVATE_KEY=0x...
# KEEPER_PRIVATE_KEY=0x...

# ============================================
# Web App Client-side Configuration
# (NEXT_PUBLIC_ prefix for browser access)
# ============================================

# API URLs
NEXT_PUBLIC_INDEXER_URL=http://localhost:3002
NEXT_PUBLIC_WS_URL=ws://localhost:3002
NEXT_PUBLIC_OWNERVIEW_URL=http://localhost:3001

# RPC URL for wallet interactions
NEXT_PUBLIC_RPC_URL=https://testnet-rpc.monad.xyz

# nad.fun Contract Addresses (for in-app trading widget)
NEXT_PUBLIC_NADFUN_LENS_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_NADFUN_BONDING_ROUTER_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_NADFUN_DEX_ROUTER_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_WMON_ADDRESS=0x0000000000000000000000000000000000000000
